<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <css src="Swiftgift_Gift::css/swiftgift.css" />
    </head>
    <body>
        <referenceContainer name="header-wrapper">
            <block class="Swiftgift\Gift\Block\ElementBase" template="Swiftgift_Gift::swiftgift-header.phtml" />
            <referenceBlock name="minicart">
                <arguments>
                    <argument name="jsLayout" xsi:type="array">
                        <item name="components" xsi:type="array">
                            <item name="minicart_content" xsi:type="array">
                                <item name="children" xsi:type="array">
                                    <item name="extra_info" xsi:type="array">
                                        <item name="children" xsi:type="array">
                                            <item name="sgbutton-minicart" xsi:type="array">
                                                <item name="component" xsi:type="string">Swiftgift_Gift/js/sgbutton-minicart</item>
                                            </item>
                                        </item>
                                    </item>
                                </item>
                            </item>
                        </item>
                    </argument>
                </arguments>
            </referenceBlock>
        </referenceContainer>
    </body>
</page>
